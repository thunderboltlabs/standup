	<ModulePrefs title="Hangout Starter">
		<Require feature="rpc" />
		<Require feature="views" />
		<Require feature="locked-domain" />
	</ModulePrefs>
	<Content type="html"><![CDATA[


<script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<link href="//thunderbolt-standup.herokuapp.com/stylesheets/site.css" media="screen" rel="stylesheet" type="text/css" />



<form>
  <div class="max-row">

      <div id="chat">
        <div id="messages-wrapper">
          <ul id="messages"></ul>
        </div>
        <div class="row collapse">
          <div class="small-12 columns input-wrapper">
            <textarea autocomplete="off" id="message" placeholder="Enter Text" tabindex="1" type="text"></textarea>
            <button class="prefix" tabindex="-1">Submit</button>
          </div>
        </div>
      </div>

  </div>
</form>

<div class="max-row">
  <ul class="avatars">

    <li class="avatar" data-name="" data-sid="246" data-state="1" style="margin-left: 0px; margin-right: 0px;">
      <div class="circle" data-color="green">
        <img src=""/>
      </div>
      <div class="name">Kevin Altman</div>
    </li>
  </ul>
</div>


<script src="//thunderbolt-standup.herokuapp.com/javascripts/main.js"></script>
</body>
]]>
</Content>
</Module>
